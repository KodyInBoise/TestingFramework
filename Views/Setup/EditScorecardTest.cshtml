@model TestingFramework.Models.ScorecardTestModel

@{
    ViewData["Title"] = "Edit Test";
}

<style>
    .btns {
        width: 100px;
    }
</style>

<h1>Edit Scorecard Test</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditScorecardTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.ScorecardID)
            @Html.HiddenFor(model => model.CategoryID)
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedResult" class="control-label"></label>
                <input asp-for="ExpectedResult" class="form-control" />
                <span asp-validation-for="ExpectedResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Back", "ScorecardDetails", new { id = Model.ScorecardID },
                    new { @class = "btn btn-secondary btns", @style="float:left" })
                <input type="submit" value="Save" class="btn btn-success btns" style="float:right"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
