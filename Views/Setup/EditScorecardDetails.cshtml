@model TestingFramework.Models.ScorecardModel

@{
    ViewData["Title"] = "Edit Scorecard";
}

<style>
    .action-btn{
        width: 100px;
    }
</style>

<h1>Edit Scorecard Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditScorecardDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultTestValue" class="control-label"></label>
                <input asp-for="DefaultTestValue" class="form-control" />
                <span asp-validation-for="DefaultTestValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Back", "ScorecardDetails", new { id = Model.ID }, new { @class = "btn btn-secondary action-btn", @style = "float:left" })
                <input type="submit" value="Save" class="btn btn-success action-btn" style="float:right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
