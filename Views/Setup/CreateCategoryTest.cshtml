@model TestingFramework.ViewModels.CreateCategoryTestViewModel

@{
    ViewData["Title"] = "CreateTest";
}

<h1>Create New Test</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Category</label>
                @Html.DropDownListFor(model => model.SelectedCategoryID, Model.CategoriesList, new { @class = "form-control btn btn-outline-dark dropdown-toggle" })
                <span asp-validation-for="SelectedCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Expected Result</label>
                <input asp-for="ExpectedResult" class="form-control" />
                <span asp-validation-for="ExpectedResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Setup</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
