@model TestingFramework.Models.CategoryTestModel

@{
    ViewData["Title"] = "Edit Test";
}

<style>
    .action-btn {
        width: 100px;
    }
</style>

<h1>Edit Category Test</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCategoryTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => Model.ID)
            @Html.HiddenFor(model => Model.CategoryID)
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedResult" class="control-label">Expected Result</label>
                <input asp-for="ExpectedResult" class="form-control" />
                <span asp-validation-for="ExpectedResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Back", "CategoryDetails", new { id = Model.CategoryID }, new { @class = "btn btn-secondary action-btn", @style = "float:left" })
                <input type="submit" value="Save" class="btn btn-success action-btn" style="float:right" />
            </div>
        </form>
    </div>
</div>
